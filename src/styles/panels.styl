@import 'variables';
@import 'mixins';

// Panels
//
// Styleguide 17


// Default Panels
//
// Basic panel. Use this to group elements.
//
// Markup:
// <div class="{$modifiers}">
//   <div class="panel-body">
//     <p>Panel Content</p>
//   </div>
// </div>
//
// .panel                    - Default panel
// .panel.panel--animated    - Hover animates it towards POV
//
// Styleguide 17.1
.panel
	position relative

	// if hidden, .panel-triangle won't display. exceptions see below.
	// overflow hidden
	border-radius $border-radius-small
	transition background-color $animation-short, color $animation-short
	&.error
		border-width 2px
		border-style solid
	&.collapse
		overflow hidden
	> .panel-heading
		border-top-radius($border-radius-small)
		padding 7px 12px 6px
		> *
			margin 0
	> .panel-footer
		border-bottom-radius($border-radius-small)

	> .restricted
		opacity 0.2
	> .restricted-overlay
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		z-index 1
		> .alert
			position absolute
			top 50%
			left 0
			right 0
			transform translateY(-50%)
			margin 0

.list--files > .panel
	overflow hidden

// Remove border from bootstrap
.panel, .panel-default, .panel > .panel-heading + .panel-collapse .panel-body, .panel-footer
	border none

// Hover animates it towards POV
.panel--animated
	cursor pointer
	transition all 500ms cubic-bezier(0.190, 1.000, 0.220, 1.000)
	transform translateY(0) scale(1, 1)
	&:hover
		transform translateY(-5px) scale(1.03, 1.03)

.panel--animated--less:hover
	transform translateY(-3px) scale(1.01, 1.01)


// Panel Heights
//
// For certain type of panels, the height is hard-coded.
//
// Markup:
// <div class="panel {$modifiers}">
//   <div class="panel-body">
//     <p>Panel Content</p>
//   </div>
// </div>
//
// .panel--backglass         - Flipbox height
// .panel--fixed-height-300  - 300px height
//
// Styleguide 17.1.1
.panel--backglass
	height 250px

.panel--fixed-height-300
	height 300px


// Inner Panels
//
// Add this class if you're creating a panel within another panel.
//
// Markup:
// <div class="panel padder">
//   <div class="panel padder {$modifiers}">
//     <p>Panel Content</p>
//    </div>
// </div>
//
// .panel--inner         - Inner panel
//
// Styleguide 17.2
.panel--inner, .panel-group .panel--inner
	border-radius $border-radius-large
	> .panel-heading, > .panel-footer
		border-top-radius($border-radius-large)
	> .panel-footer
		border-bottom-radius($border-radius-large)


// Blank Panels
//
// When you show stuff that is going to be filled up, "blank slate" as GitHub calls it.
// Basically its `.panel.content` div is vertically and horizontally centered.
//
// Markup:
// <div class="panel panel--fixed-height-300 {$modifiers}">
//   <div class="panel-content">
//     <i class="icon icon-ipdb icon-ipdb--huge space-right"></i>
//     <span>INFO</span>
//     <p><i>Click "Fetch" to load data.</i></p>
//    </div>
// </div>
//
// .panel--blank         - Inactive panel
//
// Styleguide 17.3
.panel--blank
	width 100%
	display table
	text-align center
	> .panel-content
		display table-cell
		vertical-align middle


// Banner panel
//
// Huge panels for the pack downloads on the home page.
//
// Markup:
// <div class="panel {$modifiers}">
//   <img img-src="/images/styleguide_banner.jpg">
//   <h1 class="space-left-2x space-right-2x">
//     <i class="icon icon--title color-primary icon-williams"></i>
//     <span class="pull-right">Title</span>
//   </h1>
//   <div class="padder">
//     Content here.
//   </div>
//   <button class="btn btn-default btn-lg ng-scope">Download</button>
// </div>
//
// .panel--banner         - Banner
//
// Styleguide 17.4
.panel--banner
	img
		width 100%
	i.icon--title
		position absolute
		margin-top 0
		cursor default
		&.icon-williams
			font-size 48px
		&.icon-stern
			font-size 62px
			margin-top -10px
	> .row
		margin 0 0 15px
		> div:nth-child(even)
			text-align right
	> .btn.btn-lg
		width 100%
		border-bottom-radius($border-radius-small)


// Drag & Drop Zone
//
// Markup:
// <div class="panel padder {$modifiers}">
//   <p>Panel Content</p>
//  </div>
//
// .panel--dropzone         - Drop Zone
// .panel--dropzone-alt     - Drop Zone (alternative)
//
// Styleguide 17.5
.panel--dropzone
	margin-left -30px
	margin-right -30px
	border-radius 0
	padding-left 30px
	padding-right 30px
	border-top-style dashed
	border-top-width 2px
	border-bottom-style dashed
	border-bottom-width 2px
	> label
		margin-top 45px

.panel--dropzone-alt
	border-radius $border-radius-large
	border-style solid
	border-width 2px
	padding 15px
	transition all $animation-long

	.padder-top:first-child
		margin-top 0

.panel--dropzone-alt-2
	display relative
	border none
	margin-left -10px
	margin-bottom -10px
	padding-left 10px
	padding-top 2px
	padding-bottom 10px
	transition background-color $animation-long, border-color $animation-long, opacity $animation-long
	&:before
		transition background-color $animation-long, border-color $animation-long, opacity $animation-long
		opacity 0
		content " "
		position: absolute;
		top -10px
		right 0
		bottom 0
		left -15px
		border-radius $border-radius-large
		border-style solid
		border-width 2px
	&.active:before
		opacity 1


// Panel Groups
//
// Use panel groups for either the accordion effect or simply for grouping
// several panels together. Both use the `accordion` directive from Bootstrap UI.
//
// Styleguide 17.6


// Groups
//
// Markup:
// <uib-accordion ng-init="panelOpen=[ true, true, true]" close-others="false">
//   <uib-accordion-group class="panel--inner" is-open="panelOpen[0]">
//     <uib-accordion-heading>First Panel<i ng-class="{'fa-chevron-circle-up': panelOpen[0], 'fa-chevron-circle-down': !panelOpen[0]}" class="fa pull-right"></i></uib-accordion-heading>
//     First Panel Content
//   </uib-accordion-group>
//   <uib-accordion-group class="panel--inner" is-open="panelOpen[1]">
//     <uib-accordion-heading>Second Panel<i ng-class="{'fa-chevron-circle-up': panelOpen[1], 'fa-chevron-circle-down': !panelOpen[1]}" class="fa pull-right"></i></uib-accordion-heading>
//     Second Panel Content
//   </uib-accordion-group>
//   <uib-accordion-group class="panel--inner" is-open="panelOpen[2]">
//     <uib-accordion-heading>Third Panel<i ng-class="{'fa-chevron-circle-up': panelOpen[2], 'fa-chevron-circle-down': !panelOpen[2]}" class="fa pull-right"></i></uib-accordion-heading>
//     Third Panel Content
//   </uib-accordion-group>
// </uib-accordion>
//
// .panel-group - "Normal" panel group
//
// Styleguide 17.6.2
.panel-group
	.panel
		border-radius $border-radius-large
		> .panel-heading
			border-top-radius($border-radius-large)
			padding 8px 10px 5px

// For non-glued panel groups, make margin larger.
.panel-group .panel + .panel
	margin-top 15px


// Accordion
//
// Markup:
// <uib-accordion class="{$modifiers}" close-others="true" ng-init="firstOpen=true">
//   <uib-accordion-group heading="First Panel" class="panel--inner" is-open="firstOpen">
//     First Panel Content
//   </uib-accordion-group>
//   <uib-accordion-group heading="Second Panel" class="panel--inner">
//     Second Panel Content
//   </uib-accordion-group>
//   <uib-accordion-group heading="Third Panel" class="panel--inner">
//     Third Panel Content
//   </uib-accordion-group>
// </uib-accordion>
//
// .panel-group--accordion     - Accordion
// .panel-group--transparent   - Transparent Accordion - See menu at the left ;)
//
// Styleguide 17.6.1
.panel-group--accordion
	.panel
		border-top-radius($border-radius-large)
		> .panel-heading
			border-top 2px solid rgba(0, 0, 0, 0.34)
			border-top-radius($border-radius-large)
	.panel + .panel
		margin-top 0
		border-radius 0
		> .panel-heading
			border-radius 0
	.panel:last-child
		border-bottom-radius($border-radius-large)

// Transparent Accordion
.panel-group--transparent
	.panel
		background-color transparent !important
		border-radius 0
	.panel-heading
		background-color transparent !important
		margin-left 15px
		margin-right 15px
		a
			line-height 28.5667px
	.panel-group
		margin-left -15px
		margin-right -15px
		.panel
			> .panel-heading
				padding 3px 10px
		.list-group-item
			margin-left 30px
			padding 2px 10px
	.panel-title
		text-transform none
		font-weight $font-weight-normal

	.panel-group .panel + .panel
		margin-top 0

.panel-group--transparent.subtle
	.panel-group .panel > .panel-heading
		padding-left 0px

.col--main > .panel-group--transparent.subtle .panel-group .panel
	margin-left -15px;
	margin-right -15px;

// Author's zone panel
.panel--rect-block
	border-width 7px
	border-style solid

	> h1
		margin-top 10px
		margin-bottom 15px
		font-size $font-size-normal-alt

	.center
		text-align center
	.center ul
		padding 0
		display inline-block
		text-align left

		li
			margin-top 5px

	@media (min-width: $bootstrap-screen-sm-min)
		margin-left -15px
		margin-right -15px

.col--main > .panel--rect-block
	border-top-style none
	margin-top -10px
	padding-top 10px
@media (min-width: $bootstrap-screen-sm-min)
	.col--main > .panel--rect-block
		margin-left -30px
		margin-right -30px
		margin-top 0
		padding-top 0
		border-top-style solid

.theme-dark .jumbotron > .panel
	background-color $color-lightest-inv
	box-shadow none
	border none
	border-radius 0
	margin 80px -60px 0
	padding 60px 120px
	text-align left
