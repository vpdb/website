@import 'variables';
@import 'mixins';

//
// Styleguide styles
// --------------------------------------------------
.documentation

	h1.code
		font-family $font-code
		font-weight bold
		font-size 25px
		text-transform none
		padding 0 5px
		margin-top 30px
		margin-bottom 20px
		border-radius 4px
	hr
		margin-bottom 10px
	pre
		font-size $font-size-code
	.nav.nav-tabs
		margin-top 20px

	#kss-content
		padding-bottom 30px


// Dark theme
// --------------------------------------------------
.theme-dark .documentation


	h1.code
		background-color $color-lighter
		color black

	pre
		color $color-lighter
		border-color $color-darkest
		background-color transparent
		background-image url('data:image/svg+xml;base64,')


// Light theme
// --------------------------------------------------
.theme-light .documentation

	h1.code
		background-color $color-lighter-inv
		color white

	pre
		color $color-lighter-inv
		border-color $color-darkest-inv
		background-color transparent
		background-image url('data:image/svg+xml;base64,')
