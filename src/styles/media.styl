@import 'variables';
@import 'mixins';

// Media Objects
//
// Styleguide 14


// Add padding to body instead of media
.media
	position relative
	> .pull-left
		margin-right 0
	> img.pull-left
		padding 0
.media--full-width
	width 100%
.media-body
	padding-left 15px
	&.oneliner
		padding-top 10px
.media--edit-panel
	position absolute
	top 0
	right 0
.media--no-margin
	margin-top 0

// News Flow
//
// List that displays user events along with the avatar of the user. Contains three lines.
//
// Markup:
// <div class="media {$modifiers}" ng-repeat="i in [1, 2, 3]">
//   <div class="img img-avatar img-avatar--lg pull-left" img-bg="/images/styleguide_square.jpg"></div>
//     <div class="media-body">
//       <label class="label--block">Time</label>
//       <label class="label--block"><i class="fa fa-comment space-right"></i>First Line</label>
//       <label class="label--block">Second Line</label>
//     </div>
//     <hr class="" ng-hide="$last">
// </div>
//
// .media--news          - Icons
//
// Styleguide 14.1
.media--news
	hr
		margin-top 15px
		margin-left 15px
		margin-bottom 0
	.img
		margin-left 30px
	.media-body
		> label
			margin-left 15px
			a
				font-weight $font-weight-bold

// Mini Panels
//
// Mini media panels in the side bar with two lines.
//
// Markup:
// <div class="media {$modifiers}" ng-class="{ last: $last }" ng-repeat="i in [1, 2, 3]">
//    <div class="img img--ar-square img--sm pull-left" img-bg="/images/styleguide_square.jpg"></div>
//    <div class="media-body">
//      <h6 class="h--no-margin h--lighter media-heading">First Line</h6>
//      <span>Second Line</span>
//   </div>
// </div>
//
// .media--mini          - Icons
//
// Styleguide 14.2
.media--mini
	margin-top 10px
	padding-bottom 5px
	&.last
		border none !important
	h3
		margin-top -5px
		margin-bottom 5px
	h6
		margin-top -5px
	.media-left
		padding-right 5px
	.media-body
		padding-left 10px
		h6
			margin-bottom -5px

	.pos-pencil
		font-size 15px
		position absolute
		top 0
		right 15px

	.pos-trash
		font-size 15px
		position absolute
		top 0
		right 35px

.media--mini-noborders:first-child
	margin-top 10px


.media--game-item
	transition all $animation-short
	.media-left
		padding-left 4px
		.img
			width 70px
			margin-top 3px
			margin-bottom 3px
			margin-left 3px
	.media-body
		padding 2px

	&:hover
		cursor: pointer
		background-color $color-primary

		h3.h--lighter
			color white

.media--selectable
	cursor pointer
	transition background-color $animation-shorter
	&.active
		cursor default
.col--menu .media--selectable
	margin-top 0
	margin-left -15px
	margin-right -15px
	padding-left 15px
	padding-right 15px
	padding-top 5px
	padding-bottom 5px

// in typeahead
.uib-typeahead-match > .media > img
	margin-top 5px
	margin-left 5px
