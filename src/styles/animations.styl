.ui-view-wrapper
	// no overflow:hidden because of alert boxes not rendering correctly; fix with wrapping div if necessary.
	transition height ease $animation-short
	box-sizing border-box

	> [ui-view]

		&.ng-leave, &.ng-enter
			transition all $animation-short ease-in-out
			left 30px
			right 30px
			position absolute

		&.ng-enter
			opacity 0

		&.ng-enter-active
			opacity 1

		&.ng-leave
			opacity 1

		&.ng-leave-active
			opacity 0



/**
 * See directive for additional styles.
 */
.collapse-in-animation
	overflow hidden

	&.ng-hide-remove-active
		transition height ease $animation-long
		box-sizing border-box

		> .collapse-in-animation-inner
			transition $animation-long ease all

	&.ng-hide-add, &.ng-hide-remove
		transition $animation-long ease all
		display block !important
		opacity 1

	&.ng-hide, &.ng-enter
		opacity 0

	&.ng-enter, &.ng-leave, &.ng-move
		transition $animation-long ease opacity

	&.ng-enter.ng-enter-active
		opacity 1
		transition $animation-long ease all
