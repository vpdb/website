//
// .list--checkboxes    - Checkbox list
//
// Styleguide 12.4
ul.list--checkboxes
	padding-left 0
	li
		list-style none
		position relative

.list--condensed
	margin-bottom -10px


// File List
//
// Used in the drop zone of release upload.
//
// Markup:
// <ul class="{$modifiers}">
//   <li class="panel">
//     <div class="col--list-files-left"><i class="icon icon-ext"></i></div>
//     <div class="col--list-files-right">
//       <div class="block big">First line</div>
//       <div class="block big">Second line</div>
//     </div>
//     <i class="icon icon-trash"></i>
//   </li>
// </ul>
//
// .list--files    - List Files
//
// Styleguide 12.5
ul.list--files
	padding 0
	> li
		border-radius $border-radius-large
		margin-top 15px
		margin-bottom 0
		list-style-image none
		list-style-type none
		padding-top 3px
		padding-left 3px
		padding-right 3px
		> .svg-icon
			position absolute
			right 14px
			top 28px
			cursor pointer
		&.error
			border-width 2px
			border-style solid
			padding-bottom 0

		.alert
			padding-left 75px

.flavor-item
	border-radius $border-radius-larger
	padding 15px
	cursor pointer
	transition all $animation-short
	label
		cursor pointer

.col--list-files-left, .col--list-files-right
	float left
	> svg.svg-icon
		margin-bottom 3px

.col--list-files-left
	width 60px

.col--list-files-right
	width calc(100% - 90px + 15px * 2)

	form
		margin-top 20px

.simple-list
	margin-bottom -10px
	margin-top 5px
	position relative

// List group within panel-body
// @todo refactor, this was done for the style guide panel, the game filter panels look different.
.panel-body > .list-group
	margin -15px -15px
	.list-group-item
		padding 5px 15px
		border-radius 0
		border-left-style none
		border-right-style none
		border-bottom-style none
		&:first-child
			border-top-style none


.list-group.list-group--users > .list-group-item
	padding 5px
	min-width 200px
	cursor pointer
	&:first-child
		border-top-left-radius  $border-radius-small
		border-top-right-radius  $border-radius-small
	&:last-child
		border-bottom-left-radius  $border-radius-small
		border-bottom-right-radius  $border-radius-small

.user-mention-info
	padding-left 5px
	padding-right 10px
	background-color $color-dark-inv
	border-radius $border-radius-larger

ul.ul--no-list
	list-style none
	&.no-indent
		padding-left 0
ol.lower-alpha
	li
		list-style-type lower-alpha
