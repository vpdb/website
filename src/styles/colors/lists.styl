@import '../variables';

//
// Dark theme
// --------------------------------------------------
.theme-dark

	// List group within panel-body
	.list-group > li
		background-color transparent
		a.active
			color $color-primary

	// Active and non-active colors
	.list-group-item.active
		color $color-primary
		background-color $color-darker-inv
		&:hover
			color $color-lighter
			background-color $color-darker-inv

	.list-group.list-group--users > .list-group-item
		border-color $color-dark
		background $color-lighter-inv

		&.active, &:hover, &:active:hover, &:active:focus
			border-color $color-primary
			color $color-primary
			background $color-lightish-inv


//
// Light theme
// --------------------------------------------------
.theme-light

	mentio-menu .list-group > li
		background-color rgba(209, 209, 209, 0.85)
		&.active
			background-color rgba(179, 179, 179, 0.77)
			border-color $color-primary
			&:hover
				background-color rgba(164, 164, 164, 0.77)

	.list-group > li
		background-color transparent

	// Active and non-active colors
	.list-group-item.active
		color $color-primary-black
		background-color $color-darkest-inv
		&:hover
			color $color-primary-black
			background-color $color-darkest-inv

	.panel-group--transparent .list-group-item.active
		background none
		font-weight $font-weight-bold

	ul.list--files
		color $color-lightish-inv
		.col--list-files-left > .svg-icon
			fill $color-light-inv
		> li
			> .svg-icon
				transition all $animation-short
				fill $color-dark-inv
				&:hover
					fill $color-danger
			&.error
				border-color $color-danger

	.flavor-item
		background-color $color-darkest-inv
		&:hover
			background-color $color-darker-inv
		&.active
			color $color-lightest
			background-color $color-primary-black
			.svg-icon
				fill $color-lightest
