@import '../variables';

//
// Dark theme
// --------------------------------------------------
.theme-dark
	.btn

		// default button
		&, &.btn-default
			color $color-light
			background-color $color-darker
			border-color rgba(black, 0.2)
			&:hover
				color $color-lighter
				background-color $color-light
			.badge
				background-color $color-light
				color $color-lighter-inv

		// primary button
		&.btn-primary
			color $color-background
			background-color $color-primary
			border-color rgba(black, 0.3)
			.svg-icon
				fill $color-background
			&:hover
				color $color-background
				background-color $color-primary-light
			.badge
				background-color $color-background
				color $color-lightest

		// hollow button
		&.btn-hollow
			border-color $color-dark
			color $color-light
			.svg-icon
				fill $color-light

			&:hover
				border-color $color-primary
				color $color-primary
				.svg-icon
					fill $color-primary
			&:active
				box-shadow none
				border-color $color-dark
				color $color-light
				.svg-icon
					fill $color-light

	// panel footer buttons are darker
	.panel-footer .btn
		&, &.btn-default
			color $color-dark
			background-color $color-dark-inv
			&:hover
				color rgba(white, 0.3)
				background-color rgba(black, 0.3)
				box-shadow none

//
// Light theme
// --------------------------------------------------
.theme-light
	.btn

		// default button
		&, &.btn-default
			color rgba(white, 0.6)
			background-color rgba(black, 0.25)
			border-color rgba(black, 0.1)

			.svg-icon
				fill rgba(white, 0.6)
			&:hover
				color rgba(white, 0.7)
				background-color rgba(black, 0.3)
				.svg-icon
					fill rgba(white, 0.7)

			&:active
				background-color rgba(black, 0.2)

		// primary button
		&.btn-primary
			color #eee
			background-color $color-primary-black
			border-color rgba(black, 0.2)
			&:hover
				color #eee
				background-color $color-primary-black-light
			.svg-icon
				fill #eee

			&.btn-green
				background-color $color-success
				&:hover
					background-color $color-success-solid
			&.btn-red
				background-color $color-danger
				&:hover
					background-color $color-danger-solid

		// secondary button
		&.btn--secondary
			color rgba(white, 0.7)
			background-color rgba(black, 0.35)
			.svg-icon
				fill rgba(white, 0.7)
				&:hover
					fill rgba(white, 0.8)
			&:hover
				color rgba(white, 0.8)
				background-color rgba(black, 0.4)

			&:active
				background-color rgba(black, 0.3)

		// hollow button
		&.btn-hollow
			border-width 2px
			border-color $color-dark-inv
			color $color-light-inv
			.svg-icon
				fill $color-light-inv

			&:hover
				border-color $color-primary-black
				color $color-primary-black
				.svg-icon
					fill $color-primary-black

			&[disabled]:hover
				border-color $color-dark-inv
				color $color-light-inv
				.svg-icon
					fill $color-light-inv

			&:active
				box-shadow none
				border-color $color-dark-inv
				color $color-light-inv
				.svg-icon
					fill $color-light-inv
