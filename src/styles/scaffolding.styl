@import 'variables';
@import 'mixins';

// Scaffolding
//
// Global styles that don't fit in any component or category.
//
// Styleguide 1


// Links
//
// When not using the `<a>` element, add the `.a` class to your element so the
// link behaves accordingly.
//
// .             - Default link
// .a--lighter   - Link in lighter color
// .a--darker    - Link in darker
//
// Markup:
// <a href="#" class="{$modifiers}">Link in &lt;a&gt;</a>
// <span class="a {$modifiers}" ng-click="alert('you clicked!')">Link in &lt;span&gt;</span>
//
// Styleguide 1.1
a, .a
	cursor pointer
	transition all $animation-short
	&:hover
		text-decoration none
	&:focus
		text-decoration none
		outline none
	&.active
		cursor default
	&.a--block
		display block

.clickable
	cursor pointer

// Divider
hr
	margin-top 10px
	border-width 2px
.hr--margin-small
	margin-bottom 10px
.hr--margin-smaller
	@extends .hr--margin-small
	margin-top 5px
.hr--no-margin
	margin-top 0
	margin-bottom 0
.hr--shifted-up
	margin-top -10px
	margin-bottom 10px
.hr--thin
	border-width 1px
	margin-top 5px

// Definition Lists
//
// .dl--oneliner               - Horizontal list with caps for the term
// .dl--centered.dl-horizontal - Horizontal list with 50% width for term/definition respectively
//
// Markup:
// <dl class="{$modifiers}">
//   <dt>Rating</dt>
//   <dd>8.4</dd>
//   <dt>Top 300</dt>
//   <dd>Rank 3</dd>
// </dl>
//
// Styleguide 1.3
.dl--oneliner
	width 100%
	dt
		float left
		font-weight $font-weight-normal
		text-transform uppercase
	dd
		text-align right
.dl--centered
	margin-bottom 10px
	&:last-child
		margin-bottom 0
	> dt
		width 49%
	> dd
		margin-left 51%

// Inline code
code
	font-size $font-size-code
	padding 2px 6px

// Other generic stuff
[draggable-item]
	cursor move

// TODO change to footer element
// Footer
section.footer
	text-align center
	margin-top -20px
	margin-bottom 20px
	font-weight
	a
