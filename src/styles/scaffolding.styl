// Error page
.center-middle-errorpage
	position relative
	padding 50px 50px 0
	text-align center
	h1
		margin-top -10px
		margin-bottom 15px
		font-family $font-content
		font-weight $font-weight-thin
		font-size 140px
	a
		font-family $font-content
	p
		margin 0 0 30px

.hide-scrollbars
	overflow-y hidden
	overflow-x hidden