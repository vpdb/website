// .navbar-default          - Default Navbar
//
// Styleguide 10.1
.navbar-default
	transition background-color $animation-long
	border-radius 0

	.navbar-toggle
		border-radius 0
		border none
		margin 0
		padding-right 15px
		padding-top 10px
		&:hover, &:focus
			background-color inherit

// VPDB logo
.navbar-brand
	position relative
	width 200px
	.svg-icon
		height 37px
		position absolute
		top 7px
		transition all $animation-long
		&.logo
			top 4px
			left 12px
			height 43px
			width 43px
		&.logo-vp
			left 40px
			width 75px
		&.logo-db
			left 87px
			width 75px
	span.logo-beta
		position absolute
		left 123px
		top 33px
		font-size 10px

// Navbar nav links
.navbar-nav
	> li
		font-size $font-size-small
		a
			text-transform uppercase
			&.btn
				margin-left 15px
				margin-right 15px
	> .active > a
		cursor default

	#upload-btn
		padding-bottom 0
		.btn.btn-hollow
			font-family $font-content
			font-size $font-size-small
			top -5px
			padding 4px 12px
			line-height 20px
			margin-bottom 4px
		> .visible-sm-inline > span
			position relative
			top 5px
			> svg.svg-icon
				vertical-align top
				margin-bottom 12px

	.img-avatar
		margin-top -15px
		margin-bottom -10px

#timeoutNotice
	position relative
	background-color $color-light
	margin-left -15px
	margin-right -15px
	padding-left 15px
	padding-top 10px
