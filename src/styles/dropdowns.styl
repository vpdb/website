// .uib-dropdown-menu          - Dropdown menu
//
// Styleguide 8.1
.navbar-nav > li .uib-dropdown-menu
	padding 5px
	margin-top 1px
	border-left solid 1px
	border-right solid 1px
	border-bottom solid 1px
	> li > a
		padding-left 10px

// semi-transparent layer for dropdown
.uib-dropdown-menu
	border-radius $border-radius-small
	width 100%
	&:after
		border-radius $border-radius-small
		content ""
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		z-index -1
	li
		transition all $animation-short
		cursor pointer
		padding-top 1px
		margin-top -1px

.comment-dropdown-menu
	font-size $font-size-small
	border-radius $border-radius-small
	margin-top 7px


// Typography
.uib-dropdown-menu
	font-size $font-size-small
	> li > a
		font-weight $font-weight-normal

// Media inside dropdown
.uib-dropdown-menu
	.media
		margin-left 10px
		margin-right 10px
		margin-top 7px
		padding-bottom 0

	li:last-child .media
		border-bottom none

.theme-light
	.uib-datepicker-popup.dropdown-menu
		*
			outline none

		[uib-datepicker]

			button.btn.btn-default
				background none
				box-shadow none
				border none
				color $color-lightest-inv

				.text-muted
					color $color-light-inv
				.text-info
					color $color-primary-dark

			table thead > tr:first-child th
				background-color $color-darker-inv
				button.btn.btn-default
					color $color-light-inv
					.svg-icon
						fill $color-light-inv


.uib-datepicker-popup.dropdown-menu

	padding 10px
	margin-top 0
	width inherit
	min-width -moz-max-content // ff hack
	table
		outline none

	.btn.btn-default .svg-icon
		fill $color-lightish-inv

	[uib-datepicker]


		button.btn.btn-default
			.text-info
				font-weight $font-weight-bold

		table
			thead > tr:nth-child(2) th
				padding-top 30px

			td:first-child, th:first-child
				padding-left 15px
			td:last-child, th:last-child
				padding-right 30px

	li
		cursor default
		margin-top  0
		padding-top 0
		background none
		&:hover
			background none !important

	table tr
		button.btn.btn-default
			color $color-lightest-inv
			font-family $font-content
			font-size $font-size-small
			background-color transparent
			border-radius 0
			padding 3px 10px
			&:active
				box-shadow none
				background-color $color-darkest-inv
			&.active
				color $color-lightest
				background-color $color-primary-black
				font-weight $font-weight-bold
				box-shadow none
				.text-info
					color $color-lightest
			.text-info
				font-weight $font-weight-bold
			.text-muted
				color $color-light-inv
		th > small
			text-transform uppercase
			font-size $font-size-smaller
			color $color-light-inv
		td
			padding 1px
			em
				font-size $font-size-small
				font-weight $font-weight-normal
				color $color-dark-inv

	button.btn
		&.btn-info, &.btn-danger, &.btn-success
			color $color-lighter-inv
			background transparent

			&:active
				color $color-lightest-inv
				box-shadow none

[uib-timepicker]
	margin -36px 0
	.btn.btn-link
		background-color transparent
		color $color-light-inv
		.svg-icon
			fill $color-light-inv
		&:hover
			color $color-lighter-inv
			background-color transparent
			.svg-icon
				fill $color-lighter-inv

	.uib-time > input
		width: 55px

	.uib-separator
		position relative
		left -1px
		font-weight $font-weight-bold
