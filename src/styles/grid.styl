@import 'variables';
@import 'mixins';

// Grids
//
// Styleguide 3


// Main container, there's only one element with this class.
.container--topmost
	position relative
	padding-top 50px
	margin-bottom 30px
	border-bottom-radius($border-radius-large)

// A row that fills the entire height so we can put a background color on it.
.row--fullheight
	overflow hidden
	> div
		margin-bottom -99999px
		padding-bottom 99999px

@media (max-width: $bootstrap-screen-sm-min)
	.container--topmost
		border-bottom-radius(0)
	.row--fullheight
		border-bottom-radius(0)

// A row that doesn't pad
.row--fullwidth
	margin-left -15px
	margin-right -15px

.row--no-margin > div
	margin-bottom 0

.row--padded
	padding 15px
	@media (max-width: $bootstrap-screen-sm-min)
		padding 0

.row--content
	padding 30px 60px
	@media (max-width: $bootstrap-screen-sm-min)
		padding 15px

.row--two-colums
	@media (min-width: $bootstrap-screen-md-min)
		column-count 2
		column-gap 30px

// Our main- and menu column
.col--main
	padding-left 30px
	padding-right 30px
	position relative
	overflow hidden

	.full-width
		margin-left -30px
		margin-right -30px

@media (max-width: $bootstrap-screen-sm-min)
	.col--main
		padding-left 15px
		padding-right 15px
	.col--menu
		padding-top 0
		border-top-style none

.col--menu
	padding-top 5px
	padding-bottom 25px
	border-top-style solid
	border-top-width 1px

// footer
footer
	margin-left -15px
	margin-right -15px
	padding 15px
	position relative
	border-bottom-radius($border-radius-large)
	&:before
		content " "
		position absolute
		top 0
		left 0
		right 0

// carousel
.carousel
	margin-top 15px
.carousel-indicators
	bottom -45px
	> li, > li.active
		transition border-color $animation-short
		margin-left 3px
		margin-right 3px
.carousel-control .svg-icon
	position absolute
	top 50%
	height 30px
	display inline-block
	margin-top -15px
	margin-left -15px
	z-index 5



