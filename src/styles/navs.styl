@import 'variables';
@import 'mixins';

// Nav
//
// Styleguide 9


// Icons
//
// View type switcher when listing games
//
// Markup:
// <ul class="{$modifiers}">
//   <li class="active">
//     <i class="fa fa-th-large"></i>
//   </li>
//   <li>
//     <i class="fa fa-th-list"></i>
//   </li>
//   <li>
//     <i class="icon icon-th-list-list"></i>
//   </li>
// </ul>
//
// .nav-icons          - Icons
//
// Styleguide 9.1
.nav-icons
	float right
	margin-top -39px
	margin-bottom 0
	position relative
	list-style none
	li
		display inline
		margin-left 15px
		&.active i
			cursor default
		i
			font-size 18px
			cursor pointer
			transition all $animation-short


// Tabs
//
// Standard tabs. Note that the styles below don't directly relate to the markup
// since most of the markup is generated by the UI Bootstrap directive.
//
// Markup:
// <tabset>
//   <label class="label--small pull-right" markdown-info="Markdown enabled."></label>
//   <tab>
//     <tab-heading><i title="Write" class="fa fa-edit"></i></tab-heading>
//     <p>Tab 1 Content</p>
//   </tab>
//   <tab>
//     <tab-heading><i title="Preview" class="fa fa-eye"></i></tab-heading>
//     <p>Tab 2 Content</p>
//   </tab>
// </tabset>
//
// tabset          - Default tabs
//
// Styleguide 9.2
.nav-tabs
	border none
	.icon-markdown
		font-size 14px
	li
		margin-bottom 0
		margin-right 2px
		&.active
			> a,  > a:hover,  > a:focus
				border none
		a
			padding-top 0px
			padding-bottom 4px
			padding-right 15px
			padding-left 15px
			font-size 20px  // tab icons
			border none
			line-height 33px
			border-top-radius($border-radius-large)

	// the markdown notice
	> .label--small
		margin-top 7px

	tab-heading
		> i
			vertical-align middle
		> .icon-package
			font-size 23px
		> .icon-moon
			font-size 22px
		> .fa-flask
			font-size 21px

.tabset--transparent
	> .nav.nav-tabs
		margin-top 0
		li
			a, &.active a
				background-color transparent !important
				margin 0
			&:first-child a
				padding-left 0

	> .tab-content
		background-color transparent !important
		padding-left 0
		padding-right 0
		border-top-style solid
		border-top-width 2px
		border-radius 0 !important

// content panel
.tab-content
	padding 10px 15px 15px 13px
	border-radius 0 $border-radius-large $border-radius-large $border-radius-large
	textarea
		margin-top 5px

// triangle that points from the panel to the media
.panel-triangle
	position absolute
	width 0px
	height 0px
	left -8px
	top 11px
	border-width 9px 9px 9px 0
	border-style solid
	transition background-color animation-short

// remove margin when putting code into a tab
.tab-pane
	> pre
		margin 5px 0 0 0
		max-height 400px
	> table
		margin 5px 0 0 0

// remove padding from subnavigation
.nav.subnav
	> li > a
		padding 3px 10px
