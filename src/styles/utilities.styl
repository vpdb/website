@import 'variables';
@import 'mixins';

//
// Utility classes
// --------------------------------------------------


// Spaces
// --------------------------------------------------

.no-space-top
	margin-top 0 !important

// Usually used after icons when there's text beside.
.space-v
	margin-right 5px
	margin-left 5px
.space-right
	margin-right 10px
.space-right-less
	margin-right 5px
.space-right-2x
	margin-right 15px
.panel-heading > h4 .space-right
	margin-right 5px
.space-left
	margin-left 7px
.space-left-2x
	margin-left 15px
.space-left-abs
	position absolute
	left 48px

// Padding classes
.padder
	padding 15px
.padder-2x
	padding 30px
.padder-notop
	padding 0 15px 15px
.padder-top-less
	margin-top 5px
.padder-top
	margin-top 15px !important
.padder-top-2x
	margin-top 30px !important
.padder-top-3x
	margin-top 50px
.padder-nobottom
	padding 15px 15px 0 15px
.padder-bottom
	margin-bottom 15px !important
.padder-bottom-2x
	padding-bottom 30px
.padder-bottom-less
	margin-bottom 5px !important
.padder-left
	margin-left 15px
.padder-horizontal
	padding-left 5px
	padding-right 5px
.padder-horizontal-3x
	padding-left 15px
	padding-right 15px
.padder-nobottom-only
	margin-bottom 0 !important

.content-end
	margin-top 20px
	&:before
		display table
		content " "
	&:after
		clear both

// Shifting classes
.shift-down
	margin-top 6px
	margin-bottom -6px

.shift-down-1px
	margin-top 1px
	margin-bottom -1px

.shift-up-less
	margin-top -5px !important

.shift-up
	margin-top -10px !important

.shift-up-more
	margin-top -20px !important

.shift-up-2x
	margin-top -35px

.shift-up-3x
	margin-top -50px

.shift-up-1px
	margin-top -1px
	margin-bottom 1px

.transparent
	color transparent !important
	fill transparent !important

// Misc
// ----------------------------------------------------------

// Angular classes
[ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
	display none !important

.rel-pos
	position relative

// One liner with ellipsis
.oneliner
	overflow hidden
	text-overflow ellipsis
	white-space nowrap

// Sometimes, we'd like to wrap markdown-rendered text without breaking lines
.nobreak
	display inline
	> p
		display inline

.fullwidth
	width 100%

.nopointer
	cursor default

.font-content
	font-family $font-content !important
	font-size $font-size-normal
	text-transform none

.zigzag
	background-image url('../static/images/disclosure-line.png')
	background-repeat repeat-x
	background-position 0 32px
	background-size 32px
	text-align center
	margin 0 -30px
	.panel
		background-image url('../static/images/background.png')
		border 2px solid rgba(255, 255, 255, 0.06);
		padding 5px 15px
		display inline-flex
		flex-direction column
		box-sizing border-box
		text-align center

// Style Guide
// -------------------------
.btn-theme-toggle
	position fixed
	bottom 5px
	right 20px

.multiline-wrapper
	margin-top -5px
	> *
		margin-top 5px

// mobile hacks
footer
	.text-center a
		display inline-block
